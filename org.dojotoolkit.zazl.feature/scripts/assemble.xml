<project name="assemble" basedir=".." default="assemble">
    <!-- Properties -->
	<property
		name="target.dir"
		value="${basedir}/bin/build.artifacts"/>
	
	<property
		name="workspace.dir"
		value="${basedir}/.."/>
	
	<property
		name="dojo.15.dir"
		value="${workspace.dir}/../targetplatform/dojo/plugins/org.dojotoolkit.dojo_1.5.0"/>
	
	<property
		name="dojo.16.dir"
		value="${workspace.dir}/../targetplatform/dojo/plugins/org.dojotoolkit.dojo_1.6.0"/>
	
	<property
		name="json.dir"
		value="${workspace.dir}/../targetplatform/json/plugins/org.json_1.0.0"/>
	
	<property
		name="uglifyjs.dir"
		value="${workspace.dir}/../targetplatform/uglifyjs/plugins/org.uglifyjs_1.0.0"/>
	
	<property
		name="requirejs.dir"
		value="${workspace.dir}/../targetplatform/requirejs/plugins/org.requirejs_0.24.0"/>
	
	<property
		name="httpclient.dir"
		value="${workspace.dir}/../targetplatform/http-client/plugins"/>
	
	<property
		name="equinox.dir"
		value="${workspace.dir}/../targetplatform/equinox-SDK-3.6/plugins"/>
	
	<target name="assemble">
		<mkdir dir="${target.dir}/package"/>
		<mkdir dir="${target.dir}/package/server"/>
		<mkdir dir="${target.dir}/package/server/library"/>
		<mkdir dir="${target.dir}/package/examples"/>
		<mkdir dir="${target.dir}/package/examples/css"/>
		<mkdir dir="${target.dir}/package/examples/data"/>
		<mkdir dir="${target.dir}/package/examples/handlers"/>
		<copy file="${workspace.dir}/org.dojotoolkit.zazl.jetty/README.txt" todir="${target.dir}/package"/>
		<copy todir="${target.dir}/package/server/library">
	        <fileset dir="${equinox.dir}">
	            <include name="javax.servlet_2.5.0*.jar"/>
	            <include name="org.mortbay.jetty.server_6.*.jar"/>
	            <include name="org.mortbay.jetty.util_6.*.jar"/>
	        </fileset>
	        <fileset dir="${httpclient.dir}">
	            <include name="org.apache.commons.logging_1.1.1.*.jar"/>
	        </fileset>
	        <fileset dir="${httpclient.dir}/org.apache.httpcomponents.httpclient_4.0.3">
	            <include name="*.jar"/>
	        </fileset>
	        <fileset dir="${httpclient.dir}/org.apache.httpcomponents.httpcore_4.1">
	            <include name="*.jar"/>
	        </fileset>
	        <fileset dir="${target.dir}/plugins">
	            <include name="*.jar"/>
	        </fileset>
		</copy>
		<copy todir="${target.dir}/package/server">
	        <fileset dir="${workspace.dir}/org.dojotoolkit.rt.v8/nativelib/win32">
	            <include name="*.dll"/>
	        </fileset>
	        <fileset dir="${workspace.dir}/org.dojotoolkit.rt.v8/nativelib/linux.x86">
	            <include name="*.so"/>
	        </fileset>
	        <fileset dir="${workspace.dir}/org.dojotoolkit.rt.v8/nativelib/macosx.x86">
	            <include name="*.jnilib"/>
	        </fileset>
	        <fileset dir="${workspace.dir}/org.dojotoolkit.zazl.jetty">
	            <include name="*.bat"/>
	            <exclude name="run-zazl-debug.bat"/>
	        </fileset>
	        <fileset dir="${workspace.dir}/org.dojotoolkit.zazl.jetty">
	            <include name="*.sh"/>
	            <exclude name="run-zazl-debug.sh"/>
	        </fileset>
	        <fileset dir="${workspace.dir}/org.dojotoolkit.zazl.jetty">
	            <include name="logging.properties"/>
	        </fileset>
		</copy>
		<copy todir="${target.dir}/package/examples">
	        <fileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources">
	            <include name="*.*"/>
	        </fileset>
		</copy>
		<copy todir="${target.dir}/package/examples/css">
	        <fileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources/css">
	            <include name="*.*"/>
	        </fileset>
		</copy>
		<copy todir="${target.dir}/package/examples/data">
	        <fileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources/data">
	            <include name="*.*"/>
	        </fileset>
		</copy>
		<copy todir="${target.dir}/package/examples/handlers">
	        <fileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources/handlers">
	            <include name="*.*"/>
	        </fileset>
		</copy>
		<copy todir="${target.dir}/package/examples/filters">
	        <fileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources/filters">
	            <include name="*.*"/>
	        </fileset>
		</copy>
		<copy todir="${target.dir}/package/examples/tags">
	        <fileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources/tags">
	            <include name="*.*"/>
	        </fileset>
		</copy>
		<jar destfile="${target.dir}/package/server/library/v8javabridge.jar"
			basedir="${workspace.dir}/org.dojotoolkit.rt.v8/bin"/>
		<jar destfile="${target.dir}/package/server/dojo15.jar">
			<zipfileset dir="${dojo.15.dir}/dojo" prefix="dojo"/>
			<zipfileset dir="${dojo.15.dir}/dijit" prefix="dijit"/>
			<zipfileset dir="${dojo.15.dir}/dojox" prefix="dojox"/>
		</jar>
		<jar destfile="${target.dir}/package/server/dojo16.jar">
			<zipfileset dir="${dojo.16.dir}/dojo" prefix="dojo"/>
			<zipfileset dir="${dojo.16.dir}/dijit" prefix="dijit"/>
			<zipfileset dir="${dojo.16.dir}/dojox" prefix="dojox"/>
		</jar>
		<jar destfile="${target.dir}/package/server/library/jsonjs.jar">
			<zipfileset dir="${json.dir}/json" prefix="json"/>
		</jar>
		<jar destfile="${target.dir}/package/server/library/uglifyjs.jar">
			<zipfileset dir="${uglifyjs.dir}/uglifyjs" prefix="uglifyjs"/>
		</jar>
		<jar destfile="${target.dir}/package/server/library/requirejs.jar">
			<zipfileset dir="${requirejs.dir}/requirejs" prefix="requirejs"/>
		</jar>
		<path id="classpath">
	        <fileset dir="${target.dir}/package/server/library">
    	        <include name="*.jar"/>
        	</fileset>
		</path>	
	    <manifestclasspath property="jar.classpath"
	                       jarfile="${target.dir}/package/server/library/zazljetty.jar">
	      <classpath refid="classpath" />
	    </manifestclasspath>
		
		<jar destfile="${target.dir}/package/server/library/zazljetty.jar"
			basedir="${workspace.dir}/org.dojotoolkit.zazl.jetty/bin">
			<manifest>
				<attribute name="Class-Path" value="${jar.classpath}" />
				<attribute name="Main-Class" value="org.dojotoolkit.zazl.jetty.internal.ZazlServer" />
			</manifest>	
		</jar>
		
		<zip destfile="${target.dir}/package/zazlserver.zip">
			<fileset file="${workspace.dir}/org.dojotoolkit.zazl.jetty/LICENSE"/>
			<fileset dir="${target.dir}/package">
				<exclude name="**/dojo16.jar"/> 
			</fileset>
	    </zip>
		
		<tar destfile="${target.dir}/package/zazlserver.tar.gz" compression="gzip">
			<tarfileset file="${workspace.dir}/org.dojotoolkit.zazl.jetty/LICENSE"/>
			<tarfileset dir="${target.dir}/package">
				<exclude name="**/*.sh"/> 
				<exclude name="zazlserver.zip"/> 
				<exclude name="**/org.dojotoolkit.dojo_*.jar"/> 
				<exclude name="**/org.json_*.jar"/> 
				<exclude name="**/org.uglifyjs_*.jar"/> 
				<exclude name="**/org.requirejs_*.jar"/> 
				<exclude name="**/org.dojotoolkit.optimizer.samples_*.jar"/> 
				<exclude name="**/org.dojotoolkit.zazl.tests_*.jar"/> 
				<exclude name="**/dojo16.jar"/> 
			</tarfileset>
			<tarfileset dir="${target.dir}/package/server" filemode="755" prefix="server">
				<include name="*.sh"/> 
			</tarfileset>
		</tar>
		
		<tar destfile="${target.dir}/package/zazlnodejs.tar.gz" compression="gzip">
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.optimizer.nodejs/jsoptimizer" prefix="zazlnodejs/node_modules/jsoptimizer"/>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.optimizer/optimizer" prefix="zazlnodejs/node_modules/jsoptimizer/lib/optimizer"/>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.optimizer.amd/optimizer" prefix="zazlnodejs/node_modules/jsoptimizer/lib/optimizer"/>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.server.util.nodejs/zazlutil" prefix="zazlnodejs/node_modules/zazlutil"/>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.zazl.nodejs/zazlserver" prefix="zazlnodejs/node_modules/zazlserver"/>
			<tarfileset file="${workspace.dir}/org.dojotoolkit.zazl.optimizer/tag/jstag.js" prefix="zazlnodejs/node_modules/zazlserver/lib/org/dojotoolkit/zazl/optimizer/tag"/>
			<tarfileset file="${workspace.dir}/org.dojotoolkit.zazl/jssrc/dojox/serverdtl/Request.js" prefix="zazlnodejs/node_modules/zazlserver/lib/dojox/serverdtl"/>
			<tarfileset file="${workspace.dir}/org.dojotoolkit.zazl/jssrc/dojox/serverdtl/util.js" prefix="zazlnodejs/node_modules/zazlserver/lib/dojox/serverdtl"/>
			<tarfileset dir="${workspace.dir}/../targetplatform/dojo/plugins/org.dojotoolkit.dojo_1.5.0/dojo" prefix="zazlnodejs/dojo15/dojo"/>
			<tarfileset dir="${workspace.dir}/../targetplatform/dojo/plugins/org.dojotoolkit.dojo_1.5.0/dijit" prefix="zazlnodejs/dojo15/dijit"/>
			<tarfileset dir="${workspace.dir}/../targetplatform/dojo/plugins/org.dojotoolkit.dojo_1.5.0/dojox" prefix="zazlnodejs/dojo15/dojox"/>
			<tarfileset dir="${workspace.dir}/../targetplatform/dojo/plugins/org.dojotoolkit.dojo_1.6.0/dojo" prefix="zazlnodejs/dojo16/dojo"/>
			<tarfileset dir="${workspace.dir}/../targetplatform/dojo/plugins/org.dojotoolkit.dojo_1.6.0/dijit" prefix="zazlnodejs/dojo16/dijit"/>
			<tarfileset dir="${workspace.dir}/../targetplatform/dojo/plugins/org.dojotoolkit.dojo_1.6.0/dojox" prefix="zazlnodejs/dojo16/dojox"/>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources" prefix="zazlnodejs/samples">
				<include name="*.html"/> 
				<include name="*.json"/> 
			</tarfileset>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources/css" prefix="zazlnodejs/samples/css"/>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources/data" prefix="zazlnodejs/samples/data"/>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources/" prefix="zazlnodejs/samples/org/dojotoolkit/zazl/samples">
				<include name="*.dtl"/> 
				<include name="*.js"/> 
			</tarfileset>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources/handlers" prefix="zazlnodejs/samples/org/dojotoolkit/zazl/samples/handlers"/>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources/filters" prefix="zazlnodejs/samples/org/dojotoolkit/zazl/samples/filters"/>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.zazl.samples/resources/tags" prefix="zazlnodejs/samples/org/dojotoolkit/zazl/samples/tags"/>
			<tarfileset file="${workspace.dir}/org.dojotoolkit.zazl.nodejs/zazlserver.js" prefix="zazlnodejs"/>
			<tarfileset dir="${workspace.dir}/org.dojotoolkit.zazl.amd.samples/resources" prefix="zazlnodejs/amdsamples"/>
			<tarfileset dir="${requirejs.dir}/requirejs" prefix="zazlnodejs/amdsamples/requirejs"/>
		</tar>
		
		<war destfile="${target.dir}/package/zazlsamples.war" webxml="${workspace.dir}/org.dojotoolkit.zazl.samples/WARContent/web.xml">
			<zipfileset dir="${workspace.dir}/org.dojotoolkit.compressor/src" prefix="WEB-INF/classes">
				<include name="org_dojotoolkit_compressor.properties"/> 
			</zipfileset>
			<zipfileset dir="${workspace.dir}/org.dojotoolkit.optimizer/src" prefix="WEB-INF/classes">
				<include name="org_dojotoolkit_optimizer.properties"/> 
			</zipfileset>
			<fileset dir="${target.dir}/package/examples"/>
			<zipfileset dir="${target.dir}/package/server" prefix="WEB-INF/lib">
				<include name="dojo15.jar"/> 
			</zipfileset>	
			<zipfileset dir="${target.dir}/package/server/library" prefix="WEB-INF/lib">
				<include name="apache-mime*.jar"/> 
				<include name="commons-codec*.jar"/> 
				<include name="httpclient-4.*.jar"/> 
				<include name="httpcore-4.*.jar"/> 
				<include name="httpcore-nio-4*.jar"/> 
				<include name="httpmime-4*.jar"/> 
				<include name="org.mozilla.javascript*.jar"/> 
				<include name="org.apache.commons.logging*.jar"/> 
				<include name="org.dojotoolkit.json_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.zazl_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.zazl.servlet_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.optimizer_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.optimizer.rhino_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.optimizer.servlet_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.optimizer.v8_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.zazl.optimizer_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.compressor*.jar"/> 
				<include name="org.dojotoolkit.server.util_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.shrinksafe_1.0.0*.jar"/> 
				<include name="json*.jar"/> 
				<include name="uglifyjs*.jar"/> 
				<include name="v8javabridge.jar"/> 
				<exclude name="org.dojotoolkit.optimizer.samples*.jar"/> 
			</zipfileset>	
		</war>
		<propertyfile file="${target.dir}/package/org_dojotoolkit_optimizer.properties">
		  <entry  key="jsOptimizerClassName" value="org.dojotoolkit.optimizer.amd.v8.AMDJSOptimizer"/>
		</propertyfile>		
		<war destfile="${target.dir}/package/zazlamdsamples.war" webxml="${workspace.dir}/org.dojotoolkit.zazl.amd.samples/WARContent/web.xml">
			<zipfileset dir="${workspace.dir}/org.dojotoolkit.compressor/src" prefix="WEB-INF/classes">
				<include name="org_dojotoolkit_compressor.properties"/> 
			</zipfileset>
			<zipfileset dir="${target.dir}/package" prefix="WEB-INF/classes">
				<include name="org_dojotoolkit_optimizer.properties"/> 
			</zipfileset>
	        <fileset dir="${workspace.dir}/org.dojotoolkit.zazl.amd.samples/resources">
	            <include name="*.*"/>
	        </fileset>
	        <zipfileset dir="${workspace.dir}/org.dojotoolkit.zazl.amd.samples/resources/app" prefix="app">
	            <include name="*.*"/>
	        </zipfileset>
	        <zipfileset dir="${workspace.dir}/org.dojotoolkit.zazl.amd.samples/resources/app/nls" prefix="app/nls">
	            <include name="*.*"/>
	        </zipfileset>
	        <zipfileset dir="${workspace.dir}/org.dojotoolkit.zazl.amd.samples/resources/app/nls/fr" prefix="app/nls/fr">
	            <include name="*.*"/>
	        </zipfileset>
	        <zipfileset dir="${workspace.dir}/org.dojotoolkit.zazl.amd.samples/resources/css" prefix="css">
	            <include name="*.*"/>
	        </zipfileset>
			<zipfileset dir="${target.dir}/package/server" prefix="WEB-INF/lib">
				<include name="dojo16.jar"/> 
			</zipfileset>	
			<zipfileset dir="${target.dir}/package/server/library" prefix="WEB-INF/lib">
				<include name="apache-mime*.jar"/> 
				<include name="commons-codec*.jar"/> 
				<include name="httpclient-4.*.jar"/> 
				<include name="httpcore-4.*.jar"/> 
				<include name="httpcore-nio-4*.jar"/> 
				<include name="httpmime-4*.jar"/> 
				<include name="org.mozilla.javascript*.jar"/> 
				<include name="org.apache.commons.logging*.jar"/> 
				<include name="org.dojotoolkit.json_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.zazl_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.zazl.servlet_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.optimizer_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.optimizer.amd*.jar"/> 
				<include name="org.dojotoolkit.optimizer.rhino_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.optimizer.servlet_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.optimizer.v8_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.zazl.optimizer_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.compressor*.jar"/> 
				<include name="org.dojotoolkit.server.util_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.server.util.js_1.0.0*.jar"/> 
				<include name="org.dojotoolkit.shrinksafe_1.0.0*.jar"/> 
				<include name="json*.jar"/> 
				<include name="uglifyjs*.jar"/> 
				<include name="requirejs*.jar"/> 
				<include name="v8javabridge.jar"/> 
				<exclude name="org.dojotoolkit.optimizer.samples*.jar"/> 
			</zipfileset>	
		</war>
	</target>

	<!-- Clean up the target directory -->
	<target name="clean">
		<delete	dir="${target.dir}"/>
		<mkdir dir="${target.dir}"/>
	</target>
</project>
